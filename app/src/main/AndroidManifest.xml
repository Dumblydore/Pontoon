<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.mauricee.pontoon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        tools:node="remove" />

    <application
        android:name=".ui.Pontoon"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <activity
            android:name="me.mauricee.pontoon.ui.launch.LaunchActivity"
            android:clearTaskOnLaunch="true"
            android:noHistory="true"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.floatplane.com"
                    android:pathPrefix="/activate-account"
                    android:scheme="http" />

                <data
                    android:host="www.floatplane.com"
                    android:pathPrefix="/activate-account"
                    android:scheme="https" />

            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.floatplane.com"
                    android:pathPrefix="/video"
                    android:scheme="http" />

                <data
                    android:host="www.floatplane.com"
                    android:pathPrefix="/video"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name="me.mauricee.pontoon.ui.login.LoginActivity" />
        <activity
            android:name="me.mauricee.pontoon.ui.main.MainActivity"
            android:allowTaskReparenting="true"
            android:hardwareAccelerated="true"
            android:autoRemoveFromRecents="true"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|uiMode"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />
        <activity android:name=".preferences.PreferencesActivity" />
<!--        <service android:name=".playback.PlayerService"-->
<!--            android:exported="false">-->
<!--            <intent-filter>-->
<!--                <action android:name="androidx.media2.session.MediaSessionService" />-->
<!--            </intent-filter>-->
<!--        </service>-->
        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="me.mauricee.pontoon.cast.OptionProvider" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>