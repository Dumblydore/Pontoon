<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/transition_controls_hide"
        app:constraintSetEnd="@id/hideControls"
        app:constraintSetStart="@id/showControls" />
    <ConstraintSet android:id="@+id/showControls">
        <Constraint
            android:id="@+id/controlsGroup"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/playerControlsBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlsExpand"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlCast"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlPlayPause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlBuffering"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/playerControlsFullscreen"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlsFullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/playerControlsTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/playerControlQuality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/playerControlQuality" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/hideControls">
        <Constraint
            android:id="@+id/controlsGroup"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/playerControlsBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlsExpand"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlCast"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlPlayPause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlBuffering"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/playerControlsFullscreen"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlsFullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/playerControlsTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/playerControlQuality"
            app:layout_constraintTop_toTopOf="@id/playerControlQuality" />
    </ConstraintSet>
</MotionScene>