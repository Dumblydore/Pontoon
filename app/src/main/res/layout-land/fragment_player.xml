<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/player.preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextureView
        android:id="@+id/player.display"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/layout_player_controls"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ProgressBar
        android:id="@+id/player_controls_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:indeterminateTint="@color/white" />

    <me.mauricee.pontoon.common.TimeBarView
        android:id="@+id/player_controls_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="8dp"
        android:progress="50"
        android:secondaryProgress="60" />

</FrameLayout>