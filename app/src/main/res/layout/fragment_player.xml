<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.mauricee.pontoon.player.player.PlayerView
        android:id="@+id/player.display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:controller_layout_id="@layout/layout_player_controls"
        app:player_layout_id="@layout/layout_player" />

    <me.mauricee.pontoon.common.TimeBarView
        android:id="@+id/player_controls_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-8dp"
        android:progress="50"
        android:secondaryProgress="60"
        android:splitTrack="true" />

</FrameLayout>