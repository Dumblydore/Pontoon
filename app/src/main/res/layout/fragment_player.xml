<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/player.preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextureView
        android:id="@+id/player.display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true" />

    <include layout="@layout/layout_player_controls"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/player_controls_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:indeterminateTint="@color/white" />

    <TextView
        android:id="@+id/player.controls.error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"
        tools:visibility="visible"
        android:textSize="14sp"
        android:textColor="@color/md_white_1000"
        android:text="@string/player_error_default"/>

    <SeekBar
        android:id="@+id/player_controls_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="-8dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="50"
        android:splitTrack="true"
        android:secondaryProgress="60" />

</FrameLayout>