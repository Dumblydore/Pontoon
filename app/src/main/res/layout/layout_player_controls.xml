<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_controls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/player.controls.toolbar"
    android:layout_width="match_parent"
    app:navigationIcon="@drawable/ic_arrow_down"
    android:layout_height="?android:attr/actionBarSize"/>
    
    
    <ImageButton
        android:id="@+id/player_controls_playPause"
        style="@style/ExoMediaButton.Play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/player_controls_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-light"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        tools:text="5:05" />

    <TextView
        android:id="@+id/player_controls_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-light"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        tools:text="10:10" />

    <ImageButton
        android:id="@+id/player_controls_fullscreen"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_fullscreen" />

</FrameLayout>