<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000"
    android:orientation="vertical">

    <com.google.android.exoplayer2.ui.AspectRatioFrameLayout
        android:id="@+id/player.content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:resize_mode="fixed_height">

        <SurfaceView
            android:id="@+id/player.content.surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

    <ImageView
        android:id="@+id/player.content.preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/player.content.loader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/white"
        android:padding="16dp" />

    <TextView
        android:id="@+id/player.controls.error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/player_error_default"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <include layout="@layout/layout_player_controls" />

</FrameLayout>